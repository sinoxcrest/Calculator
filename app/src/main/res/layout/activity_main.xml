<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/type"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="0"
        android:textSize="50dp"
        android:gravity="right"/>
    <TextView
        android:id="@+id/result"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="0"
        android:textSize="50dp"
        android:gravity="right"/>

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnbracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="()"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnpercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btndivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="25dp" />

        <Button

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnmultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnsubtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnplusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btndot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="25dp" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/btnequalsto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="25dp" />
    </GridLayout>
</LinearLayout>